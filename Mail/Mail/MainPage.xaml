<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mail"
             x:Class="Mail.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Padding="20" Spacing="10">
        <Button x:Name="Authenticate" Text="Authenticate" TextColor="Red" BackgroundColor="Yellow" FontSize="Medium" Clicked="AuthenticateClicked"/>
        <Label x:Name="Username" FontSize="Medium"/>
        <Button x:Name="ApplyLeave" Text="Leave Application" TextColor="Red" BackgroundColor="Yellow" FontSize="Medium" Clicked="ApplyLeaveClicked"/>
    </StackLayout>

</ContentPage>